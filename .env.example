# Vector Configuration - Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env with real secrets to version control

# =============================================================================
# API Keys and Secrets (REQUIRED)
# =============================================================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Llama Cloud API Key - Get from https://cloud.llamaindex.ai/
LLAMA_CLOUD_API_KEY=

# HuggingFace Token - Get from https://huggingface.co/settings/tokens
HF_TOKEN=

# Qdrant Cloud API Key - Get from https://cloud.qdrant.io/
QDRANT_API_KEY=

# Qdrant Cloud API URL - Your Qdrant instance URL
QDRANT_API_URL=

# RunPod API Key - Get from https://www.runpod.io/console/user/settings
RUNPOD_API_KEY=


# =============================================================================
# Embedding Model Configuration (OPTIONAL - defaults provided)
# =============================================================================

# Sentence transformer model for embeddings
# Default: sentence-transformers/all-MiniLM-L6-v2
# EMBEDDER__MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2


# =============================================================================
# AI Models Configuration (OPTIONAL - defaults provided)
# =============================================================================

# Search Model - Optimized for generating search terms
# AI_MODELS__SEARCH__NAME=gpt-5-nano
# AI_MODELS__SEARCH__MAX_TOKENS=4000
# AI_MODELS__SEARCH__TEMPERATURE=1.0
# AI_MODELS__SEARCH__PROVIDER=openai

# Answer Model - Optimized for comprehensive responses
# AI_MODELS__ANSWER__NAME=gpt-5
# AI_MODELS__ANSWER__MAX_TOKENS=15000
# AI_MODELS__ANSWER__TEMPERATURE=1.0
# AI_MODELS__ANSWER__PROVIDER=openai


# =============================================================================
# Response Length Presets (OPTIONAL - defaults provided)
# =============================================================================

# RESPONSE_LENGTHS__SHORT=4000
# RESPONSE_LENGTHS__MEDIUM=8000
# RESPONSE_LENGTHS__LONG=15000


# =============================================================================
# Chat Configuration (OPTIONAL - defaults provided)
# =============================================================================

# CHAT__MAX_HISTORY_MESSAGES=40
# CHAT__SUMMARY_TRIGGER_MESSAGES=14
# CHAT__MAX_CONTEXT_RESULTS=40
# CHAT__DEFAULT_TOP_K=12


# =============================================================================
# Vector Database Configuration (OPTIONAL - defaults provided)
# =============================================================================

# Use cloud Qdrant (QDRANT_API_URL/QDRANT_API_KEY above) or local storage
# VECTOR_DATABASE__URL=
# VECTOR_DATABASE__API_KEY=
# VECTOR_DATABASE__LOCAL_PATH=./qdrant_db


# =============================================================================
# Storage Configuration (OPTIONAL - defaults provided)
# =============================================================================

# STORAGE__CONVERTED_DOCUMENTS_DIR=./data/converted_documents
# STORAGE__REGISTRY_DIR=./vector_registry
